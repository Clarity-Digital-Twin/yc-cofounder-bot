{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DecisionResponse",
  "type": "object",
  "properties": {
    "decision": { 
      "type": "string", 
      "enum": ["YES", "NO", "ERROR"],
      "description": "The evaluation decision"
    },
    "rationale": { 
      "type": "string",
      "description": "Explanation of the decision in 1-2 sentences"
    },
    "draft": { 
      "type": "string",
      "description": "Personalized message draft if YES, empty string if NO"
    },
    "score": { 
      "type": "number", 
      "minimum": 0, 
      "maximum": 1,
      "description": "Match strength score"
    },
    "confidence": { 
      "type": "number", 
      "minimum": 0, 
      "maximum": 1,
      "description": "Confidence in the decision"
    }
  },
  "required": ["decision", "rationale", "draft", "score", "confidence"],
  "additionalProperties": false
}